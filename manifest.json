{
  "manifest_version": 3,
  "name": "Amazon Review Extractor",
  "version": "1.0.0",
  "description": "Extract Amazon product reviews and export as CSV",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://www.amazon.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Amazon Review Extractor"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/product-reviews/*",
        "https://www.amazon.com/dp/*",
        "https://www.amazon.com/*/dp/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
